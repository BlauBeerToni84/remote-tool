<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fucking Status: Not connected, asshole!"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/connect_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to fucking Server, bitch!"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/status_text" />

    <Button
        android:id="@+id/get_sms_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get fucking SMS, you bastard!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/connect_btn" />

    <Button
        android:id="@+id/get_contacts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get fucking Contacts, asshole!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_sms_btn" />

    <Button
        android:id="@+id/get_location_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get fucking Location, shithead!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_contacts_btn" />

    <Button
        android:id="@+id/get_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture fucking Camera, dick!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_location_btn" />

    <Button
        android:id="@+id/get_audio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record fucking Audio, fuckface!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_camera_btn" />

    <Button
        android:id="@+id/get_files_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get fucking Files, you cock!"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/get_audio_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
